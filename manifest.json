{
  "manifest_version": 3,
  "name": "Widget Editor Themes",
  "short_name": "WET",
  "description": "Customize the ServiceNow Widget Editor by applying popular themes like Dracula and Omni for a unique coding experience.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Widget Editor Themes"
  },
  "background": {
    "service_worker": "src/background.ts"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "version": "1.1.0"
}
